{
  "name": "@octopost/backend",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "private": "true",
  "engines": {
    "node": "20",
    "pnpm": "8"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "start": "node build/index.js",
    "prestart": "pnpm run build",
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "ts-patch install -s",
    "publish": "changeset publish",
    "version": "changeset version",
    "lint": "eslint . --max-warnings=0 --no-warn-ignored",
    "format": "prettier . --check --ignore-unknown",
    "prepare": "husky",
    "commit": "git-cz",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@commitlint/cz-commitlint": "19.2.0",
    "@eslint/js": "9.0.0",
    "@vitest/coverage-istanbul": "1.5.0",
    "commitizen": "4.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-define-config": "2.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-array-func": "5.0.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-perfectionist": "2.8.0",
    "eslint-plugin-unicorn": "52.0.0",
    "eslint-plugin-vitest": "0.5.1",
    "globals": "15.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "ts-patch": "3.1.2",
    "tsx": "4.7.2",
    "typescript": "5.4.5",
    "typescript-eslint": "7.6.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --report-unused-disable-directives --max-warnings=0 --no-warn-ignored",
      "prettier --write --ignore-unknown",
      "vitest related --run --passWithNoTests --no-cache"
    ]
  },
  "dependencies": {
    "typescript-transform-paths": "3.4.7"
  }
}
